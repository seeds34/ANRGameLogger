<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    tools:context="org.seeds.anrgamelogger.gamedetail.views.GameDetailOverview">

    <TextView
        android:id="@+id/playedLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="48dp"
        android:layout_marginStart="48dp"
        android:text="Played Location"
        android:textSize="12sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/playedDate"
        app:layout_constraintLeft_toRightOf="@+id/playedDate" />


    <ImageView
        android:id="@+id/playerOneIDImage"
        android:layout_width="143dp"
        android:layout_height="196dp"
        android:layout_marginBottom="31dp"
        android:layout_marginLeft="24dp"
        app:layout_constraintBottom_toTopOf="@+id/guideline3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:srcCompat="@drawable/cardback" />

    <ImageView
        android:id="@+id/playerTwoIDImage"
        android:layout_width="143dp"
        android:layout_height="196dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="31dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline3"
        app:srcCompat="@drawable/cardback" />

    <TextView
        android:id="@+id/playedDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="Playerd Date"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/playerOneIDImage"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.296" />

    <TextView
        android:id="@+id/vsText"
        android:layout_width="41dp"
        android:layout_height="34dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="VS"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/guideline3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline3"
        app:layout_constraintVertical_bias="0.595" />

    <TextView
        android:id="@+id/gameNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="36dp"
        android:layout_marginStart="36dp"
        android:text="Game Number"
        android:textSize="12sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/playedLocation"
        app:layout_constraintLeft_toRightOf="@+id/playedLocation" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="255dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="255dp" />

    <LinearLayout
        android:id="@+id/playerOneInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        app:layout_constraintLeft_toRightOf="@+id/playerOneIDImage"
        app:layout_constraintTop_toTopOf="@+id/playerOneIDImage">

        <TextView
            android:id="@+id/playerOneNameLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="7dp"
            android:layout_weight="1"
            android:gravity="left"
            android:text="Player Name"
            android:textAlignment="textStart"
            android:textSize="10sp"
            tools:layout_editor_absoluteX="179dp"
            tools:layout_editor_absoluteY="93dp" />

        <TextView
            android:id="@+id/playerOneName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginBottom="8dp"
            android:layout_weight="1"
            android:text="Player One Name"
            android:textAlignment="textStart"
            android:textSize="18sp"
            tools:layout_editor_absoluteX="214dp"
            tools:layout_editor_absoluteY="93dp" />

        <TextView
            android:id="@+id/playerOneDeckNameLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="7dp"
            android:layout_weight="1"
            android:gravity="left"
            android:text="Deck Name/Version"
            android:textAlignment="textStart"
            android:textSize="10sp"
            tools:layout_editor_absoluteX="172dp"
            tools:layout_editor_absoluteY="125dp" />

        <TextView
            android:id="@+id/playerOneDeckName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginBottom="8dp"
            android:layout_weight="1"
            android:text="Player One Deck:"
            android:textAlignment="textStart"
            android:textSize="18sp"
            tools:layout_editor_absoluteX="278dp"
            tools:layout_editor_absoluteY="125dp" />

        <TextView
            android:id="@+id/playerOneScoreLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="7dp"
            android:layout_weight="1"
            android:gravity="left"
            android:text="Score"
            android:textAlignment="textStart"
            android:textSize="10sp"
            tools:layout_editor_absoluteX="166dp"
            tools:layout_editor_absoluteY="169dp" />

        <TextView
            android:id="@+id/playerOneScore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginBottom="8dp"
            android:layout_weight="1"
            android:text="Player One Score"
            android:textAlignment="textStart"
            android:textSize="18sp"
            tools:layout_editor_absoluteX="264dp"
            tools:layout_editor_absoluteY="173dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/playerTwoInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="7dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="8dp"
        android:gravity="right"
        android:orientation="vertical"
        app:layout_constraintRight_toLeftOf="@+id/playerTwoIDImage"
        app:layout_constraintTop_toTopOf="@+id/playerTwoIDImage">

        <TextView
            android:id="@+id/playerTwoNameLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Player Name"
            android:textAlignment="textEnd"
            android:textSize="10sp"
            tools:layout_editor_absoluteX="121dp"
            tools:layout_editor_absoluteY="359dp" />

        <TextView
            android:id="@+id/playerTwoName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right|start"
            android:layout_marginBottom="8dp"
            android:layout_weight="1"
            android:text="Player Two Name"
            android:textAlignment="textEnd"
            android:textSize="18sp"
            tools:layout_editor_absoluteX="42dp"
            tools:layout_editor_absoluteY="359dp" />

        <TextView
            android:id="@+id/playerTwoDeckNameLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Deck Name/Version"
            android:textAlignment="textEnd"
            android:textSize="10sp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="385dp" />

        <TextView
            android:id="@+id/playerTwoDeckName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right|start"
            android:layout_marginBottom="8dp"
            android:layout_weight="1"
            android:text="Player Two Deck Name"
            android:textAlignment="textEnd"
            android:textSize="18sp"
            tools:layout_editor_absoluteX="121dp"
            tools:layout_editor_absoluteY="385dp" />

        <TextView
            android:id="@+id/playerTwoScoreLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Score"
            android:textAlignment="textEnd"
            android:textSize="10sp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="432dp" />

        <TextView
            android:id="@+id/playerTwoScore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right|start"
            android:layout_marginBottom="8dp"
            android:layout_weight="1"
            android:text="Player Two Score"
            android:textAlignment="textEnd"
            android:textSize="18sp"
            tools:layout_editor_absoluteX="134dp"
            tools:layout_editor_absoluteY="432dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/playerOneWinnerLable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:text="Winner!"
        android:textSize="7sp"
        android:visibility="invisible"
        app:layout_constraintLeft_toLeftOf="@+id/playerOneInfo"
        app:layout_constraintRight_toRightOf="@+id/playerOneInfo"
        app:layout_constraintTop_toBottomOf="@+id/playerOneInfo" />

    <TextView
        android:id="@+id/playerTwoWinnerLable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:text="Winner!"
        android:textSize="18sp"
        android:visibility="invisible"
        app:layout_constraintLeft_toLeftOf="@+id/playerTwoInfo"
        app:layout_constraintRight_toRightOf="@+id/playerTwoInfo"
        app:layout_constraintTop_toBottomOf="@+id/playerTwoInfo" />

</android.support.constraint.ConstraintLayout>

