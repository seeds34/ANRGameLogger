            <TextView
                android:id="@+id/playedDateLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Played Date:"
                android:textSize="5sp"
                app:layout_constraintStart_toStartOf="@+id/playeddate"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/playeddate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="21/08/2017"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="@+id/playerIneIDImage"
                app:layout_constraintTop_toBottomOf="@+id/playedDateLabel" />
