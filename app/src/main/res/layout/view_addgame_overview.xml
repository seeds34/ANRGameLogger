<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/linearLayout5"
  android:layout_width="match_parent"
  android:layout_height="wrap_content">

    <TextView
      android:id="@+id/playedDateLabel"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Played Date"
      />
    <TextView
      android:id="@+id/addGameDateSelector"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:ems="10"
      android:inputType="date"
      tools:layout_editor_absoluteX="32dp"
      tools:layout_editor_absoluteY="66dp"
      tools:shadowColor="@color/md_red_600"/>

    <android.support.design.widget.TextInputLayout
      android:id="@+id/textInputLayout"
      android:layout_width="371dp"
      android:layout_height="wrap_content"
      tools:layout_editor_absoluteX="20dp"
      tools:layout_editor_absoluteY="299dp">

        <AutoCompleteTextView
          android:id="@+id/txt_location"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:hint="Location"
          />
    </android.support.design.widget.TextInputLayout>


    <RadioGroup
      android:id="@+id/radioGroup"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      tools:layout_editor_absoluteX="200dp"
      tools:layout_editor_absoluteY="102dp">
        <TextView
          android:id="@+id/winningSideTitle"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginBottom="88dp"
          android:text="Winning Side:"
          />
        <RadioButton
          android:id="@+id/rbtn_winnerCorp"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/corp"
          />
        <RadioButton
          android:id="@+id/rbtn_winnerRunner"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginEnd="17dp"
          android:layout_marginRight="17dp"
          android:text="@string/runner"
          />
    </RadioGroup>
    <RadioGroup
      android:id="@+id/radioGroup2"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      tools:layout_editor_absoluteX="144dp"
      tools:layout_editor_absoluteY="419dp">
        <TextView
          android:id="@+id/winTypeTitle"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:gravity="center_horizontal"
          android:text="Win Type:"
          />
        <RadioButton
          android:id="@+id/rbtn_scoreWin"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/score"
          />
        <RadioButton
          android:id="@+id/rbtn_killWin"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/kill"
          />
        <RadioButton
          android:id="@+id/rbtn_millWin"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginStart="116dp"
          android:layout_marginLeft="116dp"
          android:text="@string/mill"
          />
    </RadioGroup>
    <android.support.constraint.Guideline
      android:id="@+id/guideline2"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      app:layout_constraintGuide_end="505dp"/>


</android.support.constraint.ConstraintLayout>