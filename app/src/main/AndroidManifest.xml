<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="org.seeds.anrgamelogger">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name=".application.ANRLoggerApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher2"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".GameListActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".gamedetail.GameDetailActivity"
            android:label="@string/title_activity_game_detail_view"
            android:theme="@style/AppTheme.NoActionBar">

            <!-- <intent-filter> -->
            <!-- <action android:name="android.intent.action.MAIN"/> -->


            <!-- <category android:name="android.intent.category.LAUNCHER"/> -->
            <!-- </intent-filter> -->
        </activity>

        <provider
            android:name=".model.GameLogggerProvider"
            android:authorities="org.seeds.anrgl.procider"
            android:exported="true"
            android:readPermission="org.seeds.anrgl.procider.READ_WRITE"
            android:writePermission="org.seeds.anrgl.procider.READ_WRITE"/>

        <activity
            android:name=".addgame.AddGameActivity"
            android:label="@string/title_activity_create_logged_game"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
    </application>

</manifest>